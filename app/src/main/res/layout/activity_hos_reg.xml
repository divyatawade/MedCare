<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    tools:context=".hos_reg">

    <EditText
        android:id="@+id/hreg"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbg"
        android:drawableStart="@drawable/ic_hospital"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_slab"
        android:hint="Registration Number"
        android:importantForAutofill="no"
        android:paddingStart="10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/primarydark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints,TextFields" />

    <EditText
        android:id="@+id/hid"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbg"
        android:drawableStart="@drawable/ic_hospital"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_slab"
        android:hint="Hospital ID"
        android:importantForAutofill="no"
        android:paddingStart="10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/primarydark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/hname"
        app:layout_constraintStart_toStartOf="@+id/hname"
        app:layout_constraintTop_toBottomOf="@+id/hname"
        tools:ignore="MissingConstraints,TextFields" />

    <EditText
        android:id="@+id/hname"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbg"
        android:drawableStart="@drawable/ic_hosp"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_slab"
        android:hint="Name"
        android:importantForAutofill="no"
        android:paddingStart="10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/primarydark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/hreg"
        app:layout_constraintStart_toStartOf="@+id/hreg"
        app:layout_constraintTop_toBottomOf="@+id/hreg"
        tools:ignore="MissingConstraints,TextFields" />

    <EditText
        android:id="@+id/haddress"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbg"
        android:drawableStart="@drawable/ic_address"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_slab"
        android:hint="Address"
        android:paddingStart="10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/primarydark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/hid"
        app:layout_constraintStart_toStartOf="@+id/hid"
        app:layout_constraintTop_toBottomOf="@+id/hid"
        tools:ignore="MissingConstraints,TextContrastCheck" />


    <EditText
        android:id="@+id/hpass"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbg"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_slab"
        android:hint="Password"
        android:paddingStart="10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/primarydark"
        android:textSize="18sp"
        android:theme="@style/ThemeOverlay.Med_Care.FullscreenContainer"
        app:layout_constraintEnd_toEndOf="@+id/haddress"
        app:layout_constraintStart_toStartOf="@+id/haddress"
        app:layout_constraintTop_toBottomOf="@+id/haddress"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/submit"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/primarydark"
        android:fontFamily="sans-serif-black"
        android:hint="SUBMIT"
        android:text="SUBMIT"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/hphone"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/textbg"
        android:drawableStart="@drawable/ic_mobile"
        android:drawablePadding="10dp"
        android:fontFamily="@font/roboto_slab"
        android:hint="Contact"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textAlignment="viewStart"
        android:textColor="@color/primarydark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/hpass"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/hpass"
        app:layout_constraintTop_toBottomOf="@+id/hpass"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:text="Hospital Registration"
        android:textAlignment="center"
        android:textColor="@color/contrast"
        android:textSize="30sp"
        android:fontFamily="@font/roboto_slab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hphone">

        <CheckBox
            android:id="@+id/hbed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/contrast"
            android:foregroundTint="@color/contrast"
            android:text="Admission Facility"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/hamb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/contrast"
            android:foregroundTint="@color/contrast"
            android:text="Ambulance"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/black" />

        <CheckBox
            android:id="@+id/hblood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:buttonTint="@color/contrast"
            android:foregroundTint="@color/contrast"
            android:text="Bloodbank"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_slab"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>